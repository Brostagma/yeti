{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.yeti.app",
  "productName": "Yeti",
  "asar": true,
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist-electron",
    "dist"
  ],
  "extraResources": [
    {
      "from": "tools/input-server/target/release",
      "to": ".",
      "filter": [
        "input-server",
        "input-server.exe"
      ]
    }
  ],
  "mac": {
    "artifactName": "Yeti-${version}-${arch}.${ext}",
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "Yeti-Setup-${version}.${ext}"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "artifactName": "Yeti-${version}.${ext}"
  }
}